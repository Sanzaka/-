<div class="text_form">
  <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
    <%= render "devise/shared/error_messages", resource: resource %>

    <h2>新規登録</h2>
    <div class="field">
      <%= f.label :name, "ユーザー名" %>
      <%= f.text_field :name, autofocus: true, autocomplete: "ユーザー名" %>
    </div>

    <div class="field">
      <%= f.label :email, "メールアドレス"%>
      <%= f.email_field :email, autocomplete: "email" %>
    </div>

    <div class="field">
      <%= f.label :password, "パスワード"%>
      <% if @minimum_password_length %>
      <em>(<%= @minimum_password_length %> 文字以上)</em>
      <% end %>
      <%= f.password_field :password, autocomplete: "new-password" %>
    </div>

    <div class="field">
      <%= f.label :password_confirmation, "パスワード(再確認)" %>
      <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
    </div>

    <div class="field">
      <%= f.label :image, "画像(任意)" %>
      <%= f.attachment_field :image %>
    </div>

    <div class="field">
      <%= f.label :is_email_receive, "メールを受け取る", value: true %>
      <%= f.radio_button :is_email_receive, :true, checked: true %><br>

      <%= f.label :is_email_receive, "メールを受け取らない", value: false %>
      <%= f.radio_button :is_email_receive, :false %>
    </div>

    <div class="actions">
      <%= f.submit "ユーザー登録", class: "big_btn" %>
    </div>

    <%= render "devise/shared/links" %>
  <% end %>
</div>





