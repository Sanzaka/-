<div class="group_index">
  <h3>所属しているグループ一覧</h3>
  <table class="borderless_table">
    <thead>
      <tr>
        <th class="th1">グループ画像</th><th class="th2">名前</th><th class="th3">メンバー数</th>
      </tr>
    </thead>
    <tbody>
      <% @my_groups.each do |group| %>
        <tr>
          <td class="td1">
            <% if group.group_type == "work_group" %>
              <%= attachment_image_tag group, :image, format: "jpeg", size: "150x150", class: "image", fallback: "work.png" %>
            <% elsif group.group_type == "friend_group" %>
              <%= attachment_image_tag group, :image, format: "jpeg", size: "150x150", class: "image", fallback: "friend.png" %>
            <%end%>
          </td>
          <td class="td2"><%= link_to group.name, group_path(group.id) %></td>
          <td class="td3"><%= group.group_members.count %></td>
        </tr>
      <%end%>
    </tbody>
  </table>
</div>