<h3>グループ変更</h3>
<div class="text_form">

  <%= form_with model: @group, local: true do |f| %>

    <div class="field">
      <%= f.label :name, "グループ名" %>
      <%= f.text_field :name, autofocus: true %>
    </div>

    <div class="field">
      <%= f.label :intro, "グループ紹介" %>
      <%= f.text_area :intro, class: "text_area" %>
    </div>

    <div class="field">
      <%= f.label :image, "グループ画像（任意）" %>
      <%= f.attachment_field :image %>
    </div>

    <div class="field">
      <h3>*グループタイプの変更はできません</h3>
    </div>

    <div><strong>グループ加入の際</strong></div><br>
    <div class="field">
      <%= f.label :direct_join, "申請が必要", value: "false" %>
      <%= f.radio_button :direct_join, "false", checked: true %><br>

      <%= f.label :direct_join, "申請は不要", value: "true" %>
      <%= f.radio_button :direct_join, "true" %>
    </div>

    <div class="action">
      <%= f.submit "グループ変更", class: "big_btn" %>
    </div>

  <%end%>

  <%= link_to group_path(@group.id), method: :delete, data: {confirm: "グループを削除した場合、元に戻すことはできません。本当によろしいですか？"}, class: "edit_link" do %>
    <div class="red_btn">グループを削除</div>
  <%end%>


</div>