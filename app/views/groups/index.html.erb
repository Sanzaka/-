<h3>グループ一覧</h3>
<table border="0">
  <thead>
    <tr>
      <th>グループ画像</th><th>名前</th>
    </tr>
  </thead>
  <tbody>
    <% @groups.each do |group| %>
      <tr>
        <td><%= attachment_image_tag group, :image, format: "jpeg", size: "50x50", class: "image"%></td>
        <%= link_to group.name, group_path(group.id) %>
      </tr>
    <%end%>
  </tbody>
</table>
