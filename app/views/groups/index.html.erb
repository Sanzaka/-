<div class="group_index">
  <h3>グループ一覧</h3>
  <table class="borderless_table">
    <thead>
      <tr>
        <th class="th1">グループ画像</th><th class="th2">名前</th><th class="th3">メンバー数</th>
      </tr>
    </thead>
    <tbody>
      <% @groups.each do |group| %>
        <tr>
          <td class="td1"><%= attachment_image_tag group, :image, format: "jpeg", size: "100x100", class: "image"%></td>
          <td class="td2"><%= link_to group.name, group_path(group.id) %></td>
          <td class="td3"><%= group.group_members.count %></td>
        </tr>
      <%end%>
    </tbody>
  </table>
</div>