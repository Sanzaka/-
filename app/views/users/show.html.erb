<div>通知機能表示欄</div>
<div class="container user_show">
  <div class="info">
    <h3>ユーザー情報</h3>
    <%= attachment_image_tag @user, :image, format: "jpeg", size: "100x100", class: "image" %>
    <div class="name">
      NAME<br>
      <%= @user.name %>
    </div>
    <div class="intro">
      INTRO<br>
      <%= @user.intro %>
    </div>
    <%= link_to edit_user_path, class: "edit_link" do %>
      <div class="green_btn">情報変更</div>
    <%end%>
  </div>
  <div class="main">
    <h3>メニュー</h3>

    <div class="group">
      <h3>人気グループ</h3>
      <div class="container">
        <% @group_ranks.each do |group| %>
        <div class="group_rank">
          <div class="head">
            <%= attachment_image_tag group, :image, format: "jpeg", size: "100x100", class: "image" %>
          </div>
          <div class="name">
            <%= group.name %>
          </div>
          <div class="type">
            <%= group.group_type %>
          </div>
        </div>
        <%end%>
      </div>
      
      <div class="search_form">
        <%= form_with url: search_path, local: true, method: :get do |f| %>
          <%= f.text_field :word %>
          <%= f.select :range, options_for_select([["User"], ["Group"]]) %>
          <%= f.submit "検索", class: "big_btn" %>
        <%end%>
      </div>


      <%= link_to groups_path, class: "edit_link" do %>
        <div class="green_btn">グループ一覧</div>
      <%end%>
      <%= link_to new_group_path, class: "edit_link" do %>
        <div class="green_btn">グループ作成</div>
      <%end%>
    </div>


    <div>人気ユーザー</div>
    <!--ユーザーランキング機能実装予定（いいね数）-->
    <div class="search">
      <!--グループ検索機能実装予定-->
    </div>
    <div class="search">
      <!--フレンド検索機能実装予定-->
    </div>

    <div class="contact">
      <%= link_to "お問い合わせはこちら", new_contact_path %>
    </div>
  </div>
</div>